require 'erb'



filename_word = "session1.txt"

filename_prs = "prs_session1.txt"

filename_audio = "audio_session1.txt"



template = %{

  <html>

<head>

<meta charset="utf-8">

<title>Word Power Made Easy Audio</title>

</head>

<body>

    <h1>Session 1</h1>

   

  <% i = 0 

     $word = Array.new %>  

  <%  File.open(filename_word, "r") do |file|

  file.each_line{|line| $word[i] = line.chomp 

  i = i+1

 } end %>  

 

  <% i = 0 

  $prs = Array.new %> 

  <%  File.open(filename_prs, "r") do |file|

  file.each_line{|line| $prs[i] = line.chomp 

  i = i+1

 } end %> 

 

  <% i = 0 

  $audio = Array.new %>

  <%  File.open(filename_audio, "r") do |file|

  file.each_line{|line| $audio[i] = line.chomp 

  i = i+1

 } end %>  

  

  <% for ii in 0..i-1 %>

 <p style="font-family:arial;color:black;font-size:30px;">

<b><%= $word[ii] %></b>&nbsp&nbsp&nbsp&nbsp&nbsp 



[<%= $prs[ii] %>] &nbsp&nbsp&nbsp



<audio controls="controls">

  <source src="audio/<%= $audio[ii]  %>.mp3" type="audio/mpeg">

Browser not support audio 

</audio>    

 </p>  

 <% end %>     

           



</body>

</html>

}.gsub(/^  /, '')





rhtml = ERB.new(template)

puts rhtml.result(binding)
